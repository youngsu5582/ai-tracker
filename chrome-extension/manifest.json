{
  "manifest_version": 3,
  "name": "AI Activity Tracker",
  "version": "0.0.6",
  "description": "Tracks prompts and responses from AI services.",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "http://localhost:11240/*"
  ],
  "background": {
    "service_worker": "src/background-wrapper.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/content.js",
        "src/inject.js"
      ],
      "run_at": "document_start" 
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/main_world_ai_tracker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}