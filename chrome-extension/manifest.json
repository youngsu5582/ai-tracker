{
  "manifest_version": 3,
  "name": "AI Activity Tracker",
  "version": "0.0.6",
  "description": "Tracks prompts and responses from AI services.",
  "permissions": [
    "storage",
    "webRequest"
  ],
  "options_ui": {
    "page": "open-ai-fetch-interceptor/options.html",
    "open_in_tab": false
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "open-ai-fetch-interceptor/background-wrapper.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "open-ai-fetch-interceptor/logger.js",
        "open-ai-fetch-interceptor/content.js",
        "open-ai-fetch-interceptor/inject.js",
        "open-ai-fetch-interceptor/add-button.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "open-ai-fetch-interceptor/fetch_interceptor.js"
      ],
      "matches": [
        "https://chatgpt.com/*"
      ]
    }
  ]
}